<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_20"
    >

    <ImageView

        android:layout_width="44dp"
        android:layout_height="@dimen/dp_44"
        android:id="@+id/yingping_image"
        android:src="@drawable/yingyuan"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        ></ImageView>
    <TextView
        android:textColor="@color/colorWhite"
        android:layout_width="60dp"
        android:layout_height="@dimen/dp_17"
        android:id="@+id/yingping_name"
        android:layout_toRightOf="@id/yingping_image"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        ></TextView>
    <TextView
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yingping_riqi"
        android:layout_toRightOf="@id/yingping_name"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_200"
        ></TextView>
    <TextView
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yingping_shijian"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@id/yingping_riqi"
        android:layout_marginLeft="@dimen/dp_15"
        ></TextView>
    <TextView
        android:textColor="@color/colorWhite"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_34"
        android:id="@+id/yingping_pingjia"
        android:layout_below="@id/yingping_image"
        android:layout_marginTop="@dimen/dp_15"
        ></TextView>

</RelativeLayout>