<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shouye"
    android:orientation="vertical">

    <TextView
        android:id="@+id/wode_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_22" />

    <LinearLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_90"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="46dp"
            android:layout_height="@dimen/dp_46"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_25"
            android:src="@mipmap/zcbj"

            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:text="电影故事"></TextView>

        <TextView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="@dimen/dp_25"
            android:text=">"
            android:textSize="@dimen/dp_24"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="312dp"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_15">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dp_10"
            android:src="@mipmap/yingpian"></ImageView>

        <TextView
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="电影票"
            android:textColor="@color/colorWhite"></TextView>

        <TextView
            android:layout_width="7dp"
            android:layout_height="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_180"
            android:layout_marginTop="@dimen/dp_10"
            android:text=">"
            android:textColor="@color/colorWhite"></TextView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_300"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_25">

        <ImageView
            android:id="@+id/image_guanzhu"
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:src="@mipmap/group_2"></ImageView>

        <TextView
            android:id="@+id/text_guanzhu"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/image_guanzhu"
            android:layout_marginTop="@dimen/dp_10"
            android:text="我的关注"
            android:textColor="@color/colorWhite"></TextView>

        <ImageView

            android:id="@+id/image_yuyue"
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/image_guanzhu"
            android:src="@mipmap/group_4"></ImageView>

        <TextView
            android:id="@+id/text_yueyue"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/image_guanzhu"
            android:layout_marginLeft="@dimen/dp_62"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/text_guanzhu"
            android:text="我的预约"
            android:textColor="@color/colorWhite"></TextView>

        <ImageView
            android:id="@+id/image_goupiao"
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/image_yuyue"
            android:src="@mipmap/move_time"></ImageView>


        <TextView
            android:id="@+id/text_goupiao"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/image_guanzhu"
            android:layout_marginLeft="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/text_yueyue"
            android:text="购票记录"
            android:textColor="@color/colorWhite"></TextView>


        <ImageView
            android:id="@+id/image_kanguo"
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/text_guanzhu"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@mipmap/kanguodedianying"></ImageView>


        <TextView
            android:id="@+id/text_kanguo"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/image_kanguo"
            android:layout_marginTop="@dimen/dp_10"
            android:text="观看记录"
            android:textColor="@color/colorWhite"></TextView>

        <ImageView
            android:id="@+id/image_pinglun"
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/text_guanzhu"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_toRightOf="@id/image_kanguo"
            android:src="@mipmap/kanguodedianying"></ImageView>


        <TextView
            android:id="@+id/text_pinglun"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/image_kanguo"
            android:layout_marginLeft="@dimen/dp_62"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/text_kanguo"
            android:text="我的评论"
            android:textColor="@color/colorWhite"></TextView>

        <ImageView
            android:id="@+id/image_yijian"
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/text_guanzhu"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_toRightOf="@id/image_pinglun"
            android:src="@mipmap/yijian"></ImageView>


        <TextView
            android:id="@+id/text_yijian"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/image_kanguo"
            android:layout_marginLeft="@dimen/dp_64"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toRightOf="@id/text_pinglun"
            android:text="意见反馈"
            android:textColor="@color/colorWhite"></TextView>


        <ImageView
            android:id="@+id/image_shezhi"
            android:layout_width="24dp"
            android:layout_height="@dimen/dp_24"
            android:layout_below="@id/text_kanguo"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@mipmap/yijian"></ImageView>


        <TextView
            android:id="@+id/text_shezhi"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@id/image_shezhi"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_10"
            android:text="设置"
            android:textColor="@color/colorWhite"></TextView>
    </RelativeLayout>


</LinearLayout>